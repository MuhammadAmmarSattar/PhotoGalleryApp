<?xml version="1.0" encoding="UTF-8" ?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--    <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--    <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/LoginLayoutSuccessColor</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


    <style name="textTheme" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">22dp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--HOME-->
    <style name="HomeTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="HomeTabStyle" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">@color/tabTextColorSelected</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIconTint">@color/home_tab_icon_tint_selector</item>
        <item name="tabSelectedTextColor">@color/tabTextColorSelected</item>
        <item name="tabTextAppearance">@style/HomeTabTextStyle</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextColor">@color/tabTextColorUnSelected</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:background">@drawable/ic_login_next_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="GalleryStyle" parent="DashboardTabStyle" />
    <style name="DashboardTabStyle" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIndicatorHeight">@dimen/_2sdp</item>
        <item name="tabBackground">@drawable/tab_layout_selector</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabTextColor">@color/events_tab_text</item>
        <item name="tabSelectedTextColor">@color/events_tab_text</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="tabIconTint">@color/home_tab_icon_tint_selector</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:queryHint">@string/search</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColorHint">@color/searchview_hint</item>
        <item name="android:fontFamily">@font/brown_regular</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_25ssp</item>

    </style>
</resources>
