<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <import type="android.view.View" />
        <variable
            name="fragment"
            type="com.app.projectname.ui.preLogin.gallery.search.SearchImageFragment" />
        <variable
            name="viewmodel"
            type="com.app.projectname.ui.preLogin.gallery.search.viewmodel.SearchImageViewModel" />

   <variable
       name="args"
       type="com.app.projectname.ui.preLogin.gallery.search.SearchImageFragmentArgs" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.preLogin.gallery.search.SearchImageFragment">


    <com.app.projectname.ui.component.customTextView.customEditext.CustomEditText
        android:id="@+id/edit_search_view"
        style="@style/SearchViewStyle"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="0dp"
        android:text="@{args.keyword}"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:drawableStart="@drawable/ic_search_icon"
        android:drawablePadding="@dimen/_12sdp"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:ellipsize="end"
        android:inputType="text"
        android:paddingStart="@dimen/_12sdp"
        android:paddingBottom="@dimen/_1sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgBack"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/closeButton"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/ic_cross_gray"
            app:layout_constraintBottom_toBottomOf="@+id/edit_search_view"
            app:layout_constraintEnd_toEndOf="@+id/edit_search_view"
            app:layout_constraintTop_toTopOf="@+id/edit_search_view" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@+id/edit_search_view"
            app:layout_constraintEnd_toStartOf="@+id/edit_search_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edit_search_view"
            app:srcCompat="@drawable/ic_back_icon" />

    <com.app.projectname.ui.component.customTextView.CustomTextView
       android:id="@+id/tvPlaceHolder"
        style="@style/TextViewStyle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No data has been found"
        android:textColor="@color/colorLightBlack"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/edit_search_view"
        />






</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
